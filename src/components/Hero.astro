---
import { string } from 'astro/zod';
---
<main class="flex h-screen">
	<div class="text-center m-auto w-screen bg-black bg-opacity-20 p-12">
	  <span class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
		<span class="block xl:inline"><span class="text-white">Journey </span><span class="text-white italic">forward</span></span>
	  </span>
	  <p class="mt-3 max-w-md mx-auto text-base text-white sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
		Let us help you reach new heights
	  </p>
	  <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
		<div class="rounded-md shadow">
		  <a href="/contact" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-seasons-blue-600 hover:bg-seasons-blue-700 md:py-4 md:text-lg md:px-10">
			Let's talk
		  </a>
		</div>
		<div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
		  <a href="#services" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-seasons-blue-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10">
			Learn more
		  </a>
		</div>
	  </div>
	</div>
  </main>
<style>
	main {
		background-image: url('https://res.cloudinary.com/basicgenius/image/upload/v1624501132/f_auto,q_auto,w_2000,c_limit/Stock/dreamstime_m_90671079_lixzvz.jpg');
    	background-position: center;
    	background-size: cover;
    	overflow: hidden;
	}
</style>
